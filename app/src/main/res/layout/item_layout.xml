<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_background_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:adjustViewBounds="true"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/tv_top_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_background_image"
        android:layout_marginTop="30dp"
        android:textSize="13sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_top_description"
        android:textSize="17sp"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:textFontWeight="40"/>

    <TextView
        android:id="@+id/tv_promo_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        android:gravity="center"
        android:textSize="11sp"/>

    <TextView
        android:id="@+id/tv_bottom_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_promo_message"
        android:textSize="13sp"
        android:layout_marginTop="30dp"
        android:gravity="center"/>


</androidx.constraintlayout.widget.ConstraintLayout>